<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="vendor/autoload.php"
>
    <testsuites>
        <testsuite name="acceptance">
            <file>./src/Ddd/Slug/Tests/AcceptanceTest.php</file>
            <directory>./src/Ddd/Mail/Tests/Acceptance</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src/Ddd/Slug/</directory>
        </whitelist>
    </filter>
</phpunit>

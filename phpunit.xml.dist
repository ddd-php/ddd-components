<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="vendor/autoload.php"
>
    <testsuites>
        <testsuite name="Mail">
            <directory suffix="Test.php">./src/Ddd/Mail/Tests/Acceptance</directory>
        </testsuite>
        <testsuite name="Slug">
            <file>./src/Ddd/Slug/Tests/AcceptanceTest.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src/Ddd</directory>
        </whitelist>
    </filter>
    <php>
        <ini name="date.timezone" value="UTC" />
    </php>
</phpunit>
